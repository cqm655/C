//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop

#include "Unit3.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm3 *Form3;
//---------------------------------------------------------------------------
__fastcall TForm3::TForm3(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
void __fastcall TForm3::e(TObject *Sender)
{

AnsiString LOG;
char x,xx,xxx,xxxx;
int y=0,yy=0, yyy=0;

if (a->Text.IsEmpty() || b->Text.IsEmpty())
{
   ShowMessage(" enter value ");
}
else
{

if(s->ItemIndex == 0)  {y =  (a->Text.ToInt()+b->Text.ToInt());
					   x='+'; }
else if(s->ItemIndex == 1)  {x='-';y =  (a->Text.ToInt()-b->Text.ToInt()); }
 else if(s->ItemIndex == 2)  {x='*';y=  (a->Text.ToInt()*b->Text.ToInt()); }
  else if(s->ItemIndex == 3)  {x='/';y= (a->Text.ToInt()/b->Text.ToInt()); }

  if(s1->ItemIndex == 0)  {r->Text = IntToStr (y+c->Text.ToInt());
					   xx='+'; }
else if(s1->ItemIndex == 1)  {xx='-';yy= (y-c->Text.ToInt()); }
 else if(s1->ItemIndex == 2)  {xx='*';yy= (y*c->Text.ToInt()); }
  else if(s1->ItemIndex == 3)  {xx='/';yy= (y/c->Text.ToInt()); }

  if(s4->ItemIndex == 0)  {yyy = (yy+d->Text.ToInt());
					   xxx='+'; }
else if(s4->ItemIndex == 1)  {xxx='-';yyy = (yy-d->Text.ToInt()); }
 else if(s4->ItemIndex == 2)  {xxx='*';yyy= (yy*d->Text.ToInt()); }
  else if(s4->ItemIndex == 3)  {xxx='/';yyy= (yy/d->Text.ToInt()); }

	if(s2->ItemIndex == 0)  {r->Text = IntToStr (yyy+e->Text.ToInt());
					   xxxx='+'; }
else if(s2->ItemIndex == 1)  {xxxx='-';yy= (yyy-e->Text.ToInt()); }
 else if(s2->ItemIndex == 2)  {xxxx='*';yy= (yyy*e->Text.ToInt()); }
  else if(s2->ItemIndex == 3)  {xxxx='/';yy= (yyy/e->Text.ToInt()); }

 LOG+=a->Text;
  LOG+=x;
 LOG+=b->Text;
 LOG+=xx;
 LOG+=c->Text;
 LOG+=" = ";
 LOG+=r->Text;

 M->Lines->Add(LOG);
 }
}
//---------------------------------------------------------------------------
